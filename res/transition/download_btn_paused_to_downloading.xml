<?xml version="1.0" encoding="utf-8"?>
<transitionSet
  xmlns:android="http://schemas.android.com/apk/res/android">
    <fade android:interpolator="@android:interpolator/linear" android:duration="150" android:fadingMode="fade_in" android:startDelay="150">
        <targets>
            <target android:targetId="@id/iv_pause" />
        </targets>
    </fade>
    <fade android:interpolator="@android:interpolator/linear" android:duration="150" android:fadingMode="fade_out">
        <targets>
            <target android:targetId="@id/iv_resume" />
        </targets>
    </fade>
</transitionSet>
