<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical" android:id="@id/filter_layout" android:layout_width="match_parent" android:layout_height="match_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:textSize="@dimen/ot_title_text_size" android:textStyle="bold" android:id="@id/ot_filter_title" android:padding="@dimen/ot_margin_medium" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" />
