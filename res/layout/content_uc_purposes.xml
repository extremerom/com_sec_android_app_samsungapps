        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/ot_title_text_size" android:textStyle="bold" android:id="@id/consent_preferences_title" android:paddingLeft="@dimen/ot_margin_text" android:paddingRight="@dimen/ot_margin_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/ot_margin_small" android:layout_marginBottom="@dimen/ot_margin_small" android:paddingStart="@dimen/ot_margin_text" android:paddingEnd="@dimen/ot_margin_text" />
