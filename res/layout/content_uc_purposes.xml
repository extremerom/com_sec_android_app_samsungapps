        <Button android:textSize="@dimen/ot_button_text_size" android:id="@id/btn_save_consent_preferences" android:padding="@dimen/ot_sdk_button_padding" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/ot_margin_very_small" android:textAllCaps="false" android:stateListAnimator="@null" />
    </RelativeLayout>
</RelativeLayout>
