<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@id/option_main_layout" android:layout_width="match_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:textSize="@dimen/ot_title_text_size" android:textStyle="bold" android:id="@id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/ot_margin_small" android:layout_marginBottom="@dimen/ot_margin_small" android:text="Consent Preferences" android:layout_centerHorizontal="true" />
    <ImageView android:id="@id/back_cp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/ot_margin_small" android:layout_marginTop="@dimen/ot_margin_medium" android:src="@drawable/ot_back_arrow" android:layout_alignParentLeft="true" android:layout_alignParentStart="true" />
    <View android:id="@id/pc_title_divider" android:background="@color/trans_light_greyOT" android:layout_width="match_parent" android:layout_height="@dimen/ot_divider_height_secondary" android:layout_below="@id/title" />
    <RelativeLayout android:paddingLeft="@dimen/ot_margin_text" android:paddingRight="@dimen/ot_margin_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@id/pc_title_divider" android:paddingStart="@dimen/ot_margin_text" android:paddingEnd="@dimen/ot_margin_text">
