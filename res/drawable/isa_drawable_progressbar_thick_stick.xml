<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@color/detail_progress_bar_bg_thick_stick" />
            <corners android:radius="@dimen/content_detail_bottom_button_bg_radius" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="@color/detail_progress_waiting_bar_thick_stick" />
                <corners android:radius="@dimen/content_detail_bottom_button_bg_radius" />
            </shape>
        </clip>
    </item>
</layer-list>
