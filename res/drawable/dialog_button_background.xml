<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <ripple android:color="@color/dialog_button_selected_color"
          xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:id="@android:id/background">
                <shape android:shape="rectangle">
                    <solid android:color="@color/dialog_button_base_color" />
                    <corners android:radius="26.0dp" />
                    <stroke android:width="@dimen/download_btn_outline_size" android:color="@color/dialog_button_base_color" />
                </shape>
            </item>
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <corners android:radius="26.0dp" />
                    <solid android:color="@color/dialog_button_base_color" />
                </shape>
            </item>
        </ripple>
    </item>
    <item android:state_focused="true" android:state_enabled="true">
        <ripple android:color="@color/dialog_button_selected_color"
          xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:id="@android:id/background">
                <shape android:shape="rectangle">
                    <solid android:color="@color/dialog_button_base_color" />
                    <corners android:radius="26.0dp" />
                    <stroke android:width="@dimen/download_btn_outline_size" android:color="@color/dialog_button_base_color" />
                </shape>
            </item>
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <corners android:radius="26.0dp" />
                    <solid android:color="@color/dialog_button_base_color" />
                </shape>
            </item>
        </ripple>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/dialog_button_base_color" />
            <corners android:radius="26.0dp" />
        </shape>
    </item>
</selector>
