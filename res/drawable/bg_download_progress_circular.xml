<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="ring" android:innerRadiusRatio="3.0" android:useLevel="false" android:thickness="@dimen/download_button_progress_bar_thickness">
            <solid android:color="@color/detail_progress_bar_bg" />
        </shape>
    </item>
    <item>
        <rotate android:fromDegrees="270.0" android:toDegrees="270.0">
            <shape android:shape="ring" android:innerRadiusRatio="3.0" android:useLevel="true" android:thickness="@dimen/download_button_progress_bar_thickness">
                <solid android:color="@color/detail_progress_bar" />
            </shape>
        </rotate>
    </item>
</layer-list>
