<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true">
        <layer-list
          xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="22.0dp" />
                    <solid android:color="@color/dialog_button_raised_color" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="22.0dp" />
                    <solid android:color="@color/dialog_button_pressed" />
                    <stroke android:width="0.0dp" android:color="@color/dialog_button_pressed" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true" android:state_enabled="true">
        <layer-list
          xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="22.0dp" />
                    <solid android:color="@color/dialog_button_raised_color" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="22.0dp" />
                    <solid android:color="@color/dialog_button_pressed" />
                    <stroke android:width="0.0dp" android:color="@color/dialog_button_pressed" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false" android:alpha="0.4">
        <shape android:shape="rectangle">
            <corners android:radius="22.0dp" />
            <solid android:color="@color/dialog_button_raised_colorless" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="22.0dp" />
            <solid android:color="@color/dialog_button_raised_color" />
        </shape>
    </item>
</selector>
